<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Study Content Analyzer</title>
    <link rel="stylesheet" href="/css/study.css">
    <!-- Add Monaco Editor for code highlighting -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.36.1/min/vs/loader.min.js"></script>
</head>
<body>
    <div class="container">
        <header>
            <h1>Study Content Analyzer</h1>
            <p class="subtitle">Analyze text or YouTube videos for better learning</p>
        </header>

        <div class="input-container">
            <div class="tabs">
                <button class="tab-btn active" data-tab="text">Text Input</button>
                <button class="tab-btn" data-tab="youtube">YouTube Video</button>
            </div>

            <div class="tab-content active" id="text-tab">
                <div class="input-group">
                    <label for="study-text">Enter your text to analyze:</label>
                    <textarea id="study-text" placeholder="Paste your text here..."></textarea>
                </div>
            </div>

            <div class="tab-content" id="youtube-tab">
                <div class="input-group">
                    <label for="youtube-url">Enter YouTube Video URL:</label>
                    <input type="url" id="youtube-url" placeholder="https://www.youtube.com/watch?v=...">
                    <p class="help-text">The video must have captions/subtitles available</p>
                </div>
            </div>

            <div class="button-group">
                <button id="analyze-btn" class="primary-btn">Analyze Content</button>
                <button id="clear-btn" class="secondary-btn">Clear</button>
            </div>

            <div id="error-container" class="error-message"></div>
            <div id="loading-indicator" class="loading-indicator">
                <div class="spinner"></div>
                <p>Analyzing content...</p>
            </div>
        </div>

        <div class="results-container">
            <div class="category-section">
                <div class="category-header" onclick="toggleSection('procedural')">
                    <h2>Procedural Knowledge</h2>
                    <span class="toggle-icon">▼</span>
                </div>
                <div id="procedural-content" class="category-content"></div>
            </div>

            <div class="category-section">
                <div class="category-header" onclick="toggleSection('analogous')">
                    <h2>Analogous Knowledge</h2>
                    <span class="toggle-icon">▼</span>
                </div>
                <div id="analogous-content" class="category-content"></div>
            </div>

            <div class="category-section">
                <div class="category-header" onclick="toggleSection('conceptual')">
                    <h2>Conceptual Knowledge</h2>
                    <span class="toggle-icon">▼</span>
                </div>
                <div id="conceptual-content" class="category-content"></div>
            </div>

            <div class="category-section">
                <div class="category-header" onclick="toggleSection('evidence')">
                    <h2>Evidence</h2>
                    <span class="toggle-icon">▼</span>
                </div>
                <div id="evidence-content" class="category-content"></div>
            </div>

            <div class="category-section">
                <div class="category-header" onclick="toggleSection('reference')">
                    <h2>Reference Information</h2>
                    <span class="toggle-icon">▼</span>
                </div>
                <div id="reference-content" class="category-content"></div>
            </div>
        </div>
    </div>
    <script src="/js/study.js"></script>
</body>
</html> 